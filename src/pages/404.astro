---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config'
import Body from '../components/Body.astro';
import Content from '../components/Content.astro';
import Masthead from '../components/Masthead.astro';
import { IoChevronForward }  from 'react-icons/io5/index.js';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<Body>
		<Header title={SITE_TITLE} />
		<main class="pt-[60px]">
			<Masthead />
			<Content>
				<section>
					<h1 class="text-3xl text-center font-montserrat mb-8">Sorry... you are in the wrong place at the wrong time.</h1>
					<div class="text-center py-4">
						<a class="inline-flex items-center gap-1 underline underline-offset-2 decoration-orange-500" href="/">Return to safety <IoChevronForward /></a>
					</div>
				</section>
			</Content>
		</main>
		<Footer />
	</Body>
</html>