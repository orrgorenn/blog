---
import CategoryPosts from "../../layouts/CategoryPosts.astro";

export function getStaticPaths() {
  const categories = [
    {
      id: 'finance',
      name: 'Finance'
    },
    {
      id: 'travel',
      name: 'Travel'
    },
    {
      id: 'tech',
      name: 'Technology'
    }
  ];

  return categories.map(({id, name}) => {
    return {
      params: { id },
      props: { name }
    }
  })
}

const { name } = Astro.props
---

<CategoryPosts category={name} />